{
  "name": "ts-express-mvc-boilerplate",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec node --loader esbuild-register/loader -r esbuild-register src/server.ts",
    "build": "node builder.js",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate --schema=src/database/schema.prisma",
    "db:push": "prisma db push --schema=src/database/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/database/schema.prisma",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv-safe": "^9.1.0",
    "express": "^4.19.2",
    "express-zod-api": "^14.2.5",
    "helmet": "^8.1.0",
    "inversify": "^6.0.2",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.23.1",
    "esbuild-register": "^3.6.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^13.1.1",
    "prisma": "^5.19.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  }
}
